<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#023944"
    android:orientation="vertical"
    android:clickable="true"
    tools:context=".Fragments.MyProfileFragment">

    <TextView
        android:id="@+id/tvTop"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MY PROFILE"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal"></TextView>

    <ScrollView
        android:layout_below="@+id/tvTop"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgCat"
                android:src="@drawable/camera"
                android:layout_width="120dp"
                android:layout_centerHorizontal="true"
                android:layout_height="120dp"
                android:elevation="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"></TextView>

                <EditText
                    android:id="@+id/tvName"
                    android:textSize="13dp"
                    android:text="Abul Raza"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:background="#fff"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#000000"></View>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"></TextView>

                    <TextView
                        android:id="@+id/txtUserPassword"
                        android:textSize="13dp"
                        android:text="9223 2332 132"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_height="match_parent"
                        android:inputType="phone"
                        android:hint="Phone"
                        android:background="#fff"
                        />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#000000"></View>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"></TextView>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="3"
                        android:textSize="13dp"
                        android:text="alireza@gmail.com"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#000000"></View>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"></TextView>

                    <EditText
                        android:id="@+id/tvPassword"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="3"
                        android:textSize="13dp"
                        android:text="**********"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:background="#fff"
                        />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#000000"></View>

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="200dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/btn_new_back"
                    android:textColor="#ffffff"
                    android:text="SAVE" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>